{
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
    },
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}